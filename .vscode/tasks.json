{
    "version": "0.1.0",
    "command": "javac",
    "showOutput": "always",
    "isShellCommand": true,
    "args": ["-d","${workspaceRoot}\\build\\classes","${workspaceRoot}\\src\\main\\java\\*.java"],
    "problemMatcher": {
		"owner": "external",
		"fileLocation": ["absolute"],
		"pattern": [
			{
				"regexp": "^(.+\\.java):(\\d):(?:\\s+(error)):(?:\\s+(.*))$",
				"file": 1,
				"location": 2,
				"severity": 3,
				"message": 4
			}
		]
	}
}